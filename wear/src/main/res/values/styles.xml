<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashActivity" parent="@android:style/Theme.DeviceDefault">
        <item name="android:windowBackground">@drawable/app_splash</item>
    </style>
    <style name="TitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/inner_frame_layout_padding</item>
    </style>
    <style name="SettingsButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">@dimen/inner_frame_layout_padding</item>
        <item name="android:drawablePadding">@dimen/inner_frame_layout_padding</item>
    </style>
</resources>