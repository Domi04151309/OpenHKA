<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:layout_marginHorizontal="24dp"
	android:layout_marginVertical="12dp">

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:layout_weight="1"
		android:layout_marginEnd="24dp"
		android:orientation="vertical">

		<TextView
			android:id="@+id/textview_itemmessage_subject"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
			android:textColor="?android:attr/textColorPrimary"
			android:textIsSelectable="false" />

		<TextView
			android:id="@+id/textview_itemmessage_body"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
			android:textColor="?android:attr/textColorSecondary"
			android:textIsSelectable="false" />
	</LinearLayout>

	<ImageView
		android:id="@+id/imageview_itemmessage_low"
		android:layout_width="24dp"
		android:layout_height="24dp"
		android:layout_gravity="center_vertical"
		android:layout_marginEnd="8dp"
		app:srcCompat="@drawable/ic_accessible"
		android:contentDescription="@null" />

	<TextView
		android:id="@+id/textview_itemmessage_line"
		android:layout_width="wrap_content"
		android:layout_height="24dp"
		android:paddingHorizontal="@dimen/pill_padding"
		android:gravity="center"
		android:layout_gravity="center_vertical"
		android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
		android:textColor="?android:textColorPrimaryInverse"
		android:background="@drawable/pill"
		android:textIsSelectable="false" />
</LinearLayout>
