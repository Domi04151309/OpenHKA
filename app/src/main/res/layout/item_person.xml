<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:gravity="center_vertical"
	android:clickable="true"
	android:focusable="true"
	style="@style/DefaultItemStyle">

	<androidx.cardview.widget.CardView
		android:layout_width="@dimen/size_header_icon"
		android:layout_height="@dimen/size_header_icon"
		android:layout_gravity="center"
		app:cardCornerRadius="8dp">

		<ImageView
			android:id="@+id/imageview_itemmessage_profile"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:contentDescription="@null"
			android:scaleType="centerCrop" />
	</androidx.cardview.widget.CardView>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/margin_listitem_text"
		android:orientation="vertical">

		<TextView
			android:id="@+id/textview_itemmessage_overline"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
			android:textColor="?android:attr/textColorSecondary"
			android:textIsSelectable="false" />

		<TextView
			android:id="@+id/textview_itemmessage_subject"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
			android:textColor="?android:attr/textColorPrimary"
			android:textIsSelectable="false" />

		<TextView
			android:id="@+id/textview_itemmessage_body"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Material3.BodySmall"
			android:textColor="?android:attr/textColorSecondary"
			android:textIsSelectable="false" />
	</LinearLayout>
</LinearLayout>
