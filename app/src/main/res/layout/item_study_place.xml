<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:gravity="center_vertical"
	android:clickable="true"
	android:focusable="true"
	style="@style/DefaultItemStyle">

	<FrameLayout
		android:layout_width="64dp"
		android:layout_height="64dp">

		<ProgressBar
			android:id="@+id/progressbar_itemmessage"
			style="?android:attr/progressBarStyleHorizontal"
			android:progressDrawable="@drawable/progress"
			android:layout_width="match_parent"
			android:layout_height="match_parent" />

		<androidx.appcompat.widget.AppCompatImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			app:srcCompat="@drawable/ic_books_color" />
	</FrameLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/margin_listitem_text"
		android:orientation="vertical">

		<TextView
			android:id="@+id/textview_itemmessage_overline"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
			android:textColor="?android:attr/textColorSecondary"
			android:textIsSelectable="false" />

		<TextView
			android:id="@+id/textview_itemmessage_subject"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
			android:textColor="?android:attr/textColorPrimary"
			android:textIsSelectable="false" />

		<TextView
			android:id="@+id/textview_itemmessage_body"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
			android:textColor="?android:attr/textColorSecondary"
			android:textIsSelectable="false" />
	</LinearLayout>
</LinearLayout>
