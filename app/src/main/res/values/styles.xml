<resources xmlns:tools="http://schemas.android.com/tools">

	<style name="Base.AppTheme" parent="Theme.Material3.DayNight">
		<item name="colorDivider">@color/colorDivider</item>
		<item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
		<item name="android:windowAnimationStyle">@style/WindowFadeTransition</item>
	</style>

	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.Launcher">
		<item name="android:windowBackground">@drawable/app_splash</item>
		<item name="android:statusBarColor">@android:color/transparent</item>
	</style>

	<style name="AppTheme.Launcher.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.ThemeUntis.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.ThemeBlue.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.ThemeGreen.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.ThemePink.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.ThemeCyan.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="WindowFadeTransition">
		<item name="android:windowEnterAnimation">@android:anim/fade_in</item>
		<item name="android:windowExitAnimation">@android:anim/fade_out</item>
	</style>

	<style name="DefaultItemStyle">
		<item name="android:background">?android:attr/selectableItemBackground</item>
		<item name="android:paddingTop">@dimen/margin_listitem_text_vertical</item>
		<item name="android:paddingStart">@dimen/margin_listitem_text</item>
		<item name="android:paddingBottom">@dimen/margin_listitem_text_vertical</item>
		<item name="android:paddingEnd">@dimen/margin_listitem_text</item>
	</style>

	<style name="DefaultCardStyle">
		<item name="android:paddingTop">@dimen/margin_card_vertical</item>
		<item name="android:paddingStart">@dimen/margin_card</item>
		<item name="android:paddingBottom">@dimen/margin_card_vertical</item>
		<item name="android:paddingEnd">@dimen/margin_card</item>
	</style>

	<style name="DetailsListItemStyle">
		<item name="android:drawablePadding">24dp</item>
		<item name="android:paddingTop">12dp</item>
		<item name="android:paddingStart">24dp</item>
		<item name="android:paddingBottom">12dp</item>
		<item name="android:paddingEnd">24dp</item>
		<item name="android:textColor">?android:attr/textColorPrimary</item>
		<item name="android:gravity">center_vertical</item>
	</style>

	<style name="FabStyle">
		<item name="android:layout_margin">16dp</item>
	</style>
</resources>
